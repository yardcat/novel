rule "e1_move"
begin
if combat.turnCount == 1 {
    ai.SetAction(enemy, "ritual", 0)
} else {
    ai.SetAction(enemy, "enemy_attack", enemy.Strength + enemy.Attack)
}
end

rule "e2_move"
begin
combat.EnemyAttack(enemy)
end

rule "ritual"
begin
combat.AddEnemyEffect(enemy, "ENEMY_TURN_START","add_enemy_strength")
end

rule "add_enemy_strength"
begin
enemy.Strength += 1
end

rule "enemy_attack"
begin
combat.EnemyAttack(enemy)
end

rule "enemy_defense"
begin
combat.EnemyAddAmor(enemy)
end
